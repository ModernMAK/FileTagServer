<h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">Tags</h6>
<ul class="nav">
    {{#tags}}
        <li class="nav-item">
            <div class="nav-link active">
                <div class="btn-group">
                    <a class href="/show/tag/{{id}}">
                        <button class="btn-outline-primary">{{name}} <span
                                class="badge badge-secondary">{{count}}</span></button>
                    </a>
                </div>
                <div class="btn-group">
                    {{#search_support}}
                        <button class="btn-outline-success"
                                onclick="addAndTagToSearchBox('{{search_id}}','{{js_name}}')"><b>+</b>
                        </button>

                        <button class="btn-outline-info"
                                onclick="addOrTagToSearchBox('{{search_id}}','{{js_name}}')"><b>~</b>
                        </button>

                        <button class="btn-outline-danger"
                                onclick="addNotTagToSearchBox('{{search_id}}','{{js_name}}')"><b>-</b>
                        </button>
                    {{/search_support}}
                </div>
            </div>


        </li>
    {{/tags}}
    {{^tags}}
        <li class="nav-item">
            <span class="nav-link">No Tags Present</span>
        </li>
    {{/tags}}
</ul>