<h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">
    <span>Tags</span>
</h6>
<ul class="nav flex-column">
    {{#TAG_LIST}}
        <li class="nav-item">
            <div class="nav-link active">
                <div class="btn-group">
                    <a href="/show/tag/{{TAG_ID}}">
                        <button>{{TAG_NAME}} <span class="badge badge-secondary">{{TAG_COUNT}}</span></button>
                    </a>
                    {{#TAG_SEARCH_SUPPORT}}
                        <button class="btn-outline-success" style="width: 28px"
                                onclick="addTagToSearchBox('{{SEARCH_ID}}','{{ESC_TAG_NAME}}')"><b>+</b>
                        </button>

                        <button class="btn-outline-danger" style="width: 28px"
                                onclick="removeTagToSearchBox('{{SEARCH_ID}}','{{ESC_TAG_NAME}}')"><b>-</b>
                        </button>
                    {{/TAG_SEARCH_SUPPORT}}
                </div>
                <a class="d-inline-block" href="/show/tag/{{TAG_ID}}">{{TAG_NAME}} <span
                        class="badge badge-secondary">{{TAG_COUNT}}</span></a>
                <div class="float-right">

<!--                    <span class=" text-muted">{{TAG_COUNT}}</span>-->
                    {{#TAG_SEARCH_SUPPORT}}
                        <button class="btn-outline-success" style="width: 28px"
                                onclick="addTagToSearchBox('{{SEARCH_ID}}','{{ESC_TAG_NAME}}')"><b>+</b>
                        </button>

                        <button class="btn-outline-danger" style="width: 28px"
                                onclick="removeTagToSearchBox('{{SEARCH_ID}}','{{ESC_TAG_NAME}}')"><b>-</b>
                        </button>
                    {{/TAG_SEARCH_SUPPORT}}
                </div>
            </div>


        </li>
    {{/TAG_LIST}}
    {{^TAG_LIST}}
        <li class="nav-item">
            <span class="nav-link">No Tags Present</span>
        </li>
    {{/TAG_LIST}}
</ul>