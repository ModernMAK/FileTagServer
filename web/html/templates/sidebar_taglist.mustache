<h6 class="sidebar-heading d-flex justify-content-between align-items-center px-3 mt-4 mb-1 text-muted">Tags</h6>
<ul class="nav">
    {{#TAG_LIST}}
        <li class="nav-item">
            <div class="nav-link active">
                <div class="btn-group">
                    <a class href="/show/tag/{{TAG_ID}}">
                        <button class="btn-outline-primary">{{TAG_NAME}} <span
                                class="badge badge-secondary">{{TAG_COUNT}}</span></button>
                    </a>
                </div>
                <div class="btn-group">
                    {{#TAG_SEARCH_SUPPORT}}
                        <button class="btn-outline-success"
                                onclick="addAndTagToSearchBox('{{SEARCH_ID}}','{{ESC_TAG_NAME}}')"><b>+</b>
                        </button>

                        <button class="btn-outline-info"
                                onclick="addOrTagToSearchBox('{{SEARCH_ID}}','{{ESC_TAG_NAME}}')"><b>~</b>
                        </button>

                        <button class="btn-outline-danger"
                                onclick="addNotTagToSearchBox('{{SEARCH_ID}}','{{ESC_TAG_NAME}}')"><b>-</b>
                        </button>
                    {{/TAG_SEARCH_SUPPORT}}
                </div>
            </div>


        </li>
    {{/TAG_LIST}}
    {{^TAG_LIST}}
        <li class="nav-item">
            <span class="nav-link">No Tags Present</span>
        </li>
    {{/TAG_LIST}}
</ul>