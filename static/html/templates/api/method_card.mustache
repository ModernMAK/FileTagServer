<div class="card" id="{{id}}">
    <h2 class="card-header badge-method-{{method_lower}}">{{method_upper}}</h2>
    <div class="btn-group btn-block">
        {{#method_links}}
            {{>api/method_button}}
        {{/method_links}}
    </div>
    <div class="card-body">
        <p class="card-text">{{description}}</p>
    </div>
    <ul class="list-group list-group-flush">
        {{#has_header_arguments}}
            <li class="list-group-item">
                <table class="table">
                    <caption class="h3" style="caption-side: top">Header Arguments</caption>
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Type</th>
                        <th>Optional</th>
                        <th>Description</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#header_arguments}}
                        <tr>
                            <td>{{name}}</td>
                            <td>{{type}}</td>
                            <td>{{optional}}</td>
                            <td>{{description}}</td>
                        </tr>
                    {{/header_arguments}}
                    </tbody>
                </table>
            </li>
        {{/has_header_arguments}}
        {{#has_query_arguments}}
            <li class="list-group-item">
                <table class="table">
                    <caption class="h3" style="caption-side: top">Query Arguments</caption>
                    <thead>
                    <tr>
                        <th>Name</th>
                        <th>Type</th>
                        <th>Optional</th>
                        <th>Description</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#query_arguments}}
                        <tr>
                            <td>{{name}}</td>
                            <td>{{type}}</td>
                            <td>{{optional}}</td>
                            <td>{{description}}</td>
                        </tr>
                    {{/query_arguments}}
                    </tbody>
                </table>
            </li>
        {{/has_query_arguments}}
        {{#has_responses}}
            <li class="list-group-item">
                <table class="table">
                    <caption class="h3" style="caption-side: top">Responses</caption>
                    <thead>
                    <tr>
                        <th>Status</th>
                        <th>Code</th>
                        <th>Data</th>
                        <th>Description</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{#responses}}
                        <tr {{#row-type}}class="table-{{row-type}}"{{/row-type}}>
                            <td>{{type}}</td>
                            <td>{{code}}</td>
                            <td>{{data}}</td>
                            <td>{{description}}</td>
                        </tr>
                    {{/responses}}
                    </tbody>
                </table>
            </li>
        {{/has_responses}}
    </ul>
</div>